---
import { Config } from "../config";
---

<footer class="p-strip is-dark l-docs__subgrid">
    <div class="l-docs__sidebar">
        <p style="padding-left: 1.5rem">{Config.footer.copyright}</p>
    </div>
    <div class="l-docs__main">
        <nav class="row" aria-label="Footer">
            <div class="has-cookie">
                <p>{Config.footer.info}</p>
                <ul class="p-inline-list--middot">
                    <li class="p-inline-list__item">
                        <a
                            class="is-dark"
                            href={`mailto:${Config.footer.contactEmail}`}
                            ><small>Contact (Email)</small></a
                        >
                    </li>
                    <li class="p-inline-list__item">
                        <a class="is-dark" href={Config.footer.srcRepoUrl}
                            ><small>{Config.footer.srcRepoLabel}</small></a
                        >
                    </li>
                </ul>
                <span class="u-off-screen"
                    ><a href="#">Go to the top of the page</a></span
                >
            </div>
        </nav>
    </div>
</footer>
